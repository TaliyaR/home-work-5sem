<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_first"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"

        app:layout_constraintEnd_toStartOf="@id/iv_plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_first"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_second"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_plus"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_second"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_third"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_equals"
        app:layout_constraintStart_toStartOf="@+id/iv_equals"
        app:layout_constraintTop_toBottomOf="@+id/iv_equals">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_third"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintEnd_toStartOf="@id/il_second"
        app:layout_constraintStart_toEndOf="@id/il_first"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_equals"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_baseline_drag_handle_24"
        app:layout_constraintEnd_toEndOf="@+id/iv_plus"
        app:layout_constraintStart_toStartOf="@+id/iv_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_plus" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@id/il_third"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>